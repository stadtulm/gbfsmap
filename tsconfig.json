{
    "compilerOptions": {
        "incremental": true,
        "declaration": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "commonjs",
        "target": "es3",
        "lib": [
            "esnext",
            "dom"
        ],
        "outDir": "dist/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
